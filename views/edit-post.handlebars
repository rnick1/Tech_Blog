<div class="container">
    <div class="card">
        <div class="card-header" style="font-weight: bolder;">
            Edit post
        </div>
        <div class="card-body">
            <form class="form edit-post-form">
                <div class="form-group">
                    <label for="post-title">Post Title:</label>
                    <input class="input" type="text" id="post-title" name="post-title" value="{{post.title}}" />
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1 post-body">Post body:</label>
                    <input class="textarea" type="text" id="post-title" name="post-body"
                        value="{{post.post_content}}" />
                </div>
                <div class="form-group">
                    <button type="submit" class="button">Save</button>
                    <button type="button" class="button delete-post-btn">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="/js/post.js"></script>
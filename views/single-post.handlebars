{{> postLayout post}}

{{> comment post.comments}}

{{#if loggedIn}}
<br>
<div class="container">
    <form class="form comment-form">
        <div class="card-body">
            <div class="form-group">
                <label for="comment-body">Please enter your comment to this post below:</label>
                <textarea class="form-control" id="comment-body" rows="2"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>
        </div>
    </form>
</div>
<br>

<script src="/js/add-comment.js"></script>
{{/if}}
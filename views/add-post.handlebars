<div class="container">
    <div class="card">
        <div class="card-header" style="font-weight: bolder;">
            Create new post
        </div>
        <div class="card-body">
            <form class="form new-post-form">
                <div class="form-group">
                    <label for="post-name">Post Title:</label>
                    <input class="input" type="text" id="post-name" name="post-name" />
                </div>
                <div class="form-group">
                    <label for="post-body">Please enter your post content below:</label>
                    <textarea class="form-control" id="post-body" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">create post</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="/js/add-post.js"></script>